#include <iostream>

using namespace std;

void dobrar(int *ptr) {
    if (ptr != nullptr) {
        *ptr = (*ptr) * 2;
    }
}

int main() {
    int numero;
    cout << "informe numero: ";
    cin >> numero;

    dobrar(&numero);

    cout << "O valor dobrado Ã©: " << numero << endl;

    return 0;
}
